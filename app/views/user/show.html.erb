<div class="main user-show">
  <div class="container">
    <div class="user">
      <% if @user.user_image? %>
        <img src="<%= "#{@user.user_image}" %>" class="user-img">  
      <% else %>
        <img src="/default.png" class="user-img">
      <% end %>
      <h2><%= @user.username %></h2>
      <% if @user.id == current_user.id %>
        <%= link_to edit_user_path(@user) do %>
          <i class="fas fa-edit fa-2x"></i>
        <% end %>
        <%= link_to user_path(@user), method: :delete, data: { confirm: "本当に削除しますか？"} do %>
          <i class="fas fa-trash-alt fa-2x"></i>
        <% end %>
      <% end %>

    </div>
    
    <div class="tab-header">
      <ul class="tab-list list-unstyled">
        <li class="tab tab-active">
          投稿
        </li>
        <li class="tab">
          いいね
        </li>
      </ul>
    </div>
  <div class="tabbox-contents">
    <div class="tabbox box-show">
      <%= render 'post_list', posts: @user.posts %>    
    </div>
    <div class="tabbox">
      <%= render 'post_list', posts: @user.post_likes %>
    </div> 
  </div>
  

  </div>
</div>
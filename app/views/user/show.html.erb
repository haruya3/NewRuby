<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= "#{@user.user_image}" %>">
      <h2><%= @user.username %></h2>
      <% if @user.id == current_user.id %>
        <%= link_to("編集",user_path(@user)) %>
      <% end %>
    </div>
    
    <ul class="user-tabs">
      <li class="active"><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <li><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
    </ul>
    
    <% @user.posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-up">
        <% if post.user.user_image? %>
          <%= link_to image_tag("#{post.user.user_image}", class: "user-icon" ), user_path(post.user) %>  
        <% else %>
          <%= link_to image_tag("/default.png", class: "user-icon" ), user_path(post.user) %>
        <% end %>
        <%= link_to(post.user.username, user_path(post.user)) %>
        </div>
        <div class="post-down">
        <%= link_to post.content, post_path(post) %>
        <div class="post-image">
          <img src="<%= "#{post.post_image}" %>" class="icon">
        </div>
        <p class="title"><%= post.title %></p>
        </div>
      </div> 
    <% end %>
  </div>
</div>